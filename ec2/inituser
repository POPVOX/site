git clone git://$CODE/sources.git sources

#########

cd sources

cat httpd_deployment_template.conf|sed "s/__USER__/$USER/g"|sed "s/__UID__/`id -u`/" > ../httpd.conf
cat nginx_deployment_template.conf|sed "s/__USER__/$USER/g"|sed "s/__UID__/`id -u`/" > ../nginx.conf

#########

cd libs

sh checkouts

#########

cd

mkdir logs

if [[ "$DB" != "localhost" ]]; then
	# Set slave configuration.
	echo "REMOTEDB=$DB" >> ./slave;
	fi

